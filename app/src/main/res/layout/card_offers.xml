<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_offer"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="249dp">


    <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:padding="10dp"
                android:text="LIMITED OFFER!"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btn_fav_offer"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <ImageButton
                android:id="@+id/btn_fav_offer"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:backgroundTint="#00FFFFFF"
                android:clickable="true"
                android:contentDescription="fav"
                android:focusable="true"
                android:src="@drawable/heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.963"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/descuento"
                android:layout_width="355dp"
                android:layout_height="78dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="10dp"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="@string/txt_master_offer"
                android:textAppearance="@style/style_desco"
                android:translationY="-1.45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.216"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageUrl"
            android:layout_width="102dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/img_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/descuento"
            app:layout_constraintVertical_bias="0.567" />

        <TextView
            android:id="@+id/description"
            android:layout_width="218dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-20dp"
            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:text="@string/txt_offers"
            android:textAppearance="@style/description_letter"
            android:translationY="-1.97sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.288"
            app:layout_constraintStart_toEndOf="@+id/imageUrl"
            app:layout_constraintTop_toTopOf="@+id/descuento"
            app:layout_constraintVertical_bias="0.544" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="9dp"

            android:layout_marginTop="100dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/description"
            app:layout_constraintTop_toTopOf="@+id/descuento"
            app:layout_constraintVertical_bias="0.454"
            app:srcCompat="@drawable/flecha" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
